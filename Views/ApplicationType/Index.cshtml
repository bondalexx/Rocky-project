@model IEnumerable<ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ApplicationType List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp;   Create New ApplicationType
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                ApplicationType Name
                            </th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                         {
                         <tr>
                            <td style="width:50%">
                                @obj.Name
                            </td>
                            
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                         </tr>
                         }
                    </tbody>
                </table>
            }
            else
            {
                <p>No application exist.</p>
            }
</div>
